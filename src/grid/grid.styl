  // Define partial sizes for columnNumber < totalColumns.
  for $i in range(1, ($grid-tablet-columns - 1)) {
    .mdl-cell--{$i}-col {
      partial-size($i, $grid-tablet-columns, $grid-tablet-gutter);
    }

    .mdl-cell--{$i}-col-tablet.mdl-cell--{$i}-col-tablet {
      partial-size($i, $grid-tablet-columns, $grid-tablet-gutter);
    }
  }

  // Define 100% for everything else.
  for $i in range($grid-tablet-columns, $grid-desktop-columns) {
