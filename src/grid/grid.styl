@import "../variables";

.mdl-grid {
  display: flex;
  flex-flow: row wrap;
  margin: 0 auto 0 auto;
  align-items: stretch;

  &.mdl-grid--no-spacing {
    padding: 0;
  }
}

.mdl-cell {
  box-sizing: border-box;
}


.mdl-cell--top {
  align-self: flex-start;
}

.mdl-cell--middle {
  align-self: center;
}

.mdl-cell--bottom {
  align-self: flex-end;
}

.mdl-cell--stretch {
  align-self: stretch;
}

.mdl-grid.mdl-grid--no-spacing > .mdl-cell {
  margin: 0;
}


// Mixins for width calculation.
partial-size($size, $columns, $gutter) {
  width: convert("calc(" + (($size / $columns) * 100)+"%" + " - " + $gutter + ")");

  .mdl-grid--no-spacing > & {
    width: convert("" + (($size / $columns) * 100)+"%" + "");
  }
}

full-size($gutter) {
  partial-size(1, 1, $gutter);
}



////////// Phone //////////

@media (max-width: $grid-tablet-breakpoint - 1) {
  .mdl-grid {
    padding: $grid-phone-margin - ($grid-phone-gutter / 2);
  }

  .mdl-cell {
    margin: ($grid-phone-gutter / 2);
    partial-size($grid-cell-default-columns, $grid-phone-columns,
        $grid-phone-gutter);
  }

  .mdl-cell--hide-phone {
    display: none !important;
  }

  // Define partial sizes for columnNumber < totalColumns.
  for $i in range(1, ($grid-phone-columns - 1)) {
    .mdl-cell--{$i}-col {
      partial-size($i, $grid-phone-columns, $grid-phone-gutter);
    }

    .mdl-cell--{$i}-col-phone.mdl-cell--{$i}-col-phone {
      partial-size($i, $grid-phone-columns, $grid-phone-gutter);
    }
  }

  // Define 100% for everything else.
  for $i in range($grid-phone-columns, $grid-desktop-columns) {
    .mdl-cell--{$i}-col {
      full-size($grid-phone-gutter);
    }

    .mdl-cell--{$i}-col-phone.mdl-cell--{$i}-col-phone {
      full-size($grid-phone-gutter);
    }
  }
}


////////// Tablet //////////

@media (min-width: $grid-tablet-breakpoint) and (max-width: $grid-desktop-breakpoint - 1) {
  .mdl-grid {
    padding: $grid-tablet-margin - ($grid-tablet-gutter / 2);
  }

  .mdl-cell {
