    }
  }
}


////////// Desktop //////////

@media (min-width: $grid-desktop-breakpoint) {
  .mdl-grid {
    padding: $grid-desktop-margin - ($grid-desktop-gutter / 2);
  }

  .mdl-cell {
    margin: ($grid-desktop-gutter / 2);
    partial-size($grid-cell-default-columns, $grid-desktop-columns,
        $grid-desktop-gutter);
  }

  .mdl-cell--hide-desktop {
    display: none !important;
  }

  // Define partial sizes for all numbers of columns.
  for $i in range(1, $grid-desktop-columns) {
    .mdl-cell--{$i}-col {
      partial-size($i, $grid-desktop-columns, $grid-desktop-gutter);
    }

    .mdl-cell--{$i}-col-desktop.mdl-cell--{$i}-col-desktop {
      partial-size($i, $grid-desktop-columns, $grid-desktop-gutter);
    }
  }
}
